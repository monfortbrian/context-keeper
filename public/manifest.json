{
  "manifest_version": 3,
  "name": "Context Keeper",
  "version": "1.0.0",
  "description": "Save and restore your browsing contexts with one click. Never lose your workspace again.",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Context Keeper",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
